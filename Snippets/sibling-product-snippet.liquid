{% unless product.metafields.subscriptions.has_subscription %}
    <div class="rc_blockX rc_block__type rc_block__type__onetime">
        <input checked type="radio" id="this-product" name="sibling-products" value="sibling" class="rc_radio rc_radio__onetime">
        <label for="this-product" class="rc_label rc_label__onetime">
            {{ product.metafields.custom.sibling_snippet_text }}
        </label>
        {% if product.metafields.custom.snippet_disclaimer %}
            <p class="rc_label_disclaimer">{{ product.metafields.custom.snippet_disclaimer }}</p>
        {%- endif -%}
    </div>
{%- endunless -%}


{%- assign list = product.metafields.custom.sibling_products.value -%}

{% for sibling in list %}
    <div class="rc_blockX rc_block__type rc_block__type__onetime">
        <input onclick="navigateSiblingProduct('{{ sibling.handle }}')" type="radio" id="sibling-product" name="sibling-products" value="sibling" class="rc_radio rc_radio__onetime">
        <label for="sibling-product" class="rc_label rc_label__onetime">
            {{ sibling.metafields.custom.sibling_snippet_text }}
        </label>
        {% if sibling.metafields.custom.sibling_snippet_disclaimer %}
            <p>{{ sibling.metafields.custom.sibling_snippet_disclaimer }}</p>
        {%- endif -%}
    </div>
{% endfor %}

<script>
    function navigateSiblingProduct(url) {
        window.location.href = '/products/' + url;
    }
</script>

