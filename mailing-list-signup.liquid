<style>
    .signup-modal {
        display: none;
        position: fixed;
        z-index: 99;
        padding-top:25px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.9);
    }
    .signup-modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 0 20px 20px 20px;
        border: 1px solid #888;
        width: 45%;
    }
    .signup-modal-close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }
    .signup-modal-close:hover,
    .signup-modal-close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }
    .signup-modal .klaviyo-form-UqSnqN{
        margin-top: 40px;
    }
    @media only screen and (max-width:768px){
        .signup-modal-content {width: 80%;}

    }
    @media only screen and (max-width:600px){
        .signup-modal {padding-top: 15px;}
        .signup-modal .klaviyo-form-UqSnqN {margin-top: 25px;}
        .signup-modal-close {line-height: 28px;}
    }
</style>

<div id="SignUpModal" class="signup-modal">
    <div class="signup-modal-content">
        <span class="signup-modal-close">&times;</span>
        <div class="klaviyo-form-UqSnqN"></div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var modal = document.getElementById("SignUpModal");
    //var btn = document.getElementById("SignUp-btn");
    //  var btn = document.getElementsByClassName("SignUp-btn");
    var span = document.getElementsByClassName("signup-modal-close")[0];
    // btn.onclick = function() {
    //   modal.style.display = "block";
    // }
    span.onclick = function() {
        modal.style.display = "none";
    }
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    $(document).ready(function() {
        $('.SignUp-btn').click(function() {
            $('#SignUpModal').css('display','block');
        });
    });
</script>